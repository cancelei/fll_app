<% if @current_mistakes.present? %>
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        Mistakes to Work On
      </div>
    </h2>
    
    <div class="space-y-6">
      <% @current_mistakes.each do |error_type, entries| %>
        <div class="border-t pt-4">
          <h3 class="text-lg font-medium text-gray-900 mb-3">
            <%= error_type.humanize %> Mistakes
            <span class="ml-2 bg-red-100 text-red-800 text-sm px-2 py-1 rounded">
              <%= entries.sum(&:count) %> occurrences
            </span>
          </h3>
          
          <div class="space-y-4">
            <% entries.each do |entry| %>
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="flex justify-between items-start">
                  <div>
                    <div class="text-red-600 font-medium mb-1"><%= entry.mistake %></div>
                    <div class="text-sm text-gray-600">
                      Occurred <%= entry.count %> times
                      <% if entry.last_occurrence %>
                        Â· Last seen <%= time_ago_in_words(entry.last_occurrence) %> ago
                      <% end %>
                    </div>
                  </div>
                  
                  <%= button_to mark_mistake_resolved_path(entry), method: :patch, class: "bg-green-100 hover:bg-green-200 text-green-800 text-sm px-3 py-1 rounded transition duration-200", form: { class: "inline-block" } do %>
                    <div class="flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      Mark Resolved
                    </div>
                  <% end %>
                </div>
                
                <div class="mt-3">
                  <div class="w-full bg-gray-200 rounded-full h-1.5">
                    <% percentage = (entry.count.to_f / entries.sum(&:count) * 100).round %>
                    <div class="bg-red-600 h-1.5 rounded-full" style="width: <%= percentage %>%"></div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          
          <div class="mt-4 p-4 bg-blue-50 rounded-md">
            <h4 class="font-medium text-gray-900 mb-2">Learning Tips:</h4>
            <ul class="list-disc pl-5 space-y-1 text-gray-700">
              <% case error_type %>
              <% when 'verb-tense' %>
                <li>Practice using different tenses in context</li>
                <li>Review when to use present perfect vs. simple past</li>
                <li>Study continuous vs. simple tense differences</li>
              <% when 'word-order' %>
                <li>Remember: subject + verb + object is the basic English sentence structure</li>
                <li>Time expressions usually come at the end of sentences</li>
                <li>Adjectives come before the nouns they describe</li>
              <% when 'subject-verb-agreement' %>
                <li>Singular subjects need singular verbs (he works, she studies)</li>
                <li>Plural subjects need plural verbs (they work, we study)</li>
                <li>Pay attention to irregular verbs and their forms</li>
              <% else %>
                <li>Focus on practicing this type of grammar structure</li>
                <li>Consider using grammar practice apps for targeted exercises</li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
