<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Speaking Prompt</h1>
      <p class="text-gray-600">Practice your spoken English with this prompt</p>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-xl font-semibold mb-4">Prompt:</h2>
      <div class="p-4 bg-blue-50 rounded-md mb-6">
        <p class="text-lg"><%= @prompt.content %></p>
        <div class="mt-2 flex items-center space-x-3 text-sm text-gray-500">
          <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded"><%= @prompt.category %></span>
          <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded"><%= @prompt.difficulty_level %></span>
        </div>
      </div>
      
      <div class="mt-6">
        <%= link_to "Start Speaking Practice", new_prompt_user_response_path(@prompt), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition duration-300" %>
      </div>
    </div>
    
    <div class="mt-8">
      <%= link_to "Back to Prompts", prompts_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  </div>
</div>
