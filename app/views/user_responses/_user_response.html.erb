<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
  <div class="flex justify-between items-start">
    <div>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">
        <%= truncate(user_response.prompt.content, length: 100) %>
      </h3>
      <div class="flex items-center space-x-3 text-sm text-gray-500 mb-4">
        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded"><%= user_response.prompt.category %></span>
        <span class="text-gray-500"><%= user_response.created_at.strftime("%b %d, %Y") %></span>
      </div>
      
      <% if user_response.transcript.present? %>
        <p class="text-gray-700 mb-4"><%= truncate(user_response.transcript, length: 120) %></p>
      <% end %>
      
      <div class="flex items-center space-x-4">
        <div class="flex items-center">
          <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center mr-2">
            <span class="font-bold text-blue-800"><%= user_response.grammar_score || '-' %></span>
          </div>
          <span class="text-sm text-gray-600"><%= t('user_responses.grammar_score') %></span>
        </div>
        
        <% if user_response.corrections.any? %>
          <div class="flex items-center">
            <div class="w-8 h-8 rounded-full bg-red-100 flex items-center justify-center mr-2">
              <span class="font-bold text-red-800"><%= user_response.corrections.count %></span>
            </div>
            <span class="text-sm text-gray-600"><%= t('user_responses.corrections') %></span>
          </div>
        <% end %>
      </div>
    </div>
    
    <div>
      <%= link_to t('user_responses.view_details', default: 'View Details'), user_response_path(user_response), class: "bg-blue-600 hover:bg-blue-700 text-white text-sm text-nowrap font-medium py-2 px-4 rounded-md transition duration-300" %>
    </div>
  </div>
</div>
