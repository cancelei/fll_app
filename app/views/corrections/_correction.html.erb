<div class="bg-white border border-gray-200 rounded-lg p-4">
  <div class="flex items-start">
    <div class="bg-red-100 text-red-800 px-2 py-1 rounded text-sm font-medium mr-3">
      <%= correction.error_type.humanize %>
    </div>
    <div class="flex-1">
      <div class="mb-2">
        <span class="font-medium">Mistake:</span>
        <span class="bg-red-100 text-red-800 px-1 rounded"><%= correction.mistake %></span>
      </div>
      <div class="mb-2">
        <span class="font-medium">Correction:</span>
        <span class="bg-green-100 text-green-800 px-1 rounded"><%= correction.correction %></span>
      </div>
      <div>
        <span class="font-medium">Tip:</span>
        <span class="text-gray-700"><%= correction.tip %></span>
      </div>
    </div>
  </div>
</div>
